{
  "name": "auditreporthelper",
  "displayName": "AuditReportHelper",
  "description": "审计报告辅助工具 - 支持多 LLM Provider",
  "version": "0.1.0",
  "publisher": "UPON",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auditreporthelper.reportWrite",
        "title": "Finding 信息生成"
      },
      {
        "command": "auditreporthelper.generateParticipantProcess",
        "title": "生成 Participant Process"
      },
      {
        "command": "auditreporthelper.configureProvider",
        "title": "配置 LLM Provider"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "auditreporthelper.reportWrite",
          "group": "navigation"
        },
        {
          "when": "editorTextFocus",
          "command": "auditreporthelper.generateParticipantProcess",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Audit Report Helper",
      "properties": {
        "auditReportHelper.providers": {
          "type": "array",
          "default": [
            {
              "name": "OpenAI",
              "baseUrl": "https://api.openai.com/v1",
              "apiKey": "",
              "models": [
                "gpt-4o",
                "gpt-4o-mini",
                "gpt-3.5-turbo"
              ]
            },
            {
              "name": "DeepSeek",
              "baseUrl": "https://api.deepseek.com",
              "apiKey": "",
              "models": [
                "deepseek-chat",
                "deepseek-coder",
                "deepseek-reasoner"
              ]
            }
          ],
          "description": "LLM Provider 配置列表",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Provider 名称"
              },
              "baseUrl": {
                "type": "string",
                "description": "API Base URL"
              },
              "apiKey": {
                "type": "string",
                "description": "API Key"
              },
              "models": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "可用模型列表"
              }
            }
          }
        },
        "auditReportHelper.defaultProvider": {
          "type": "string",
          "default": "OpenAI",
          "description": "默认 LLM Provider"
        },
        "auditReportHelper.defaultModel": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "默认模型"
        },
        "auditReportHelper.savedPromptOptions": {
          "type": "object",
          "default": {},
          "description": "保存的 Prompt 选项设置"
        },
        "codeAskAI.apiKey": {
          "type": "string",
          "description": "[已弃用] 请使用 auditReportHelper.providers 配置",
          "deprecationMessage": "请迁移到 auditReportHelper.providers 配置"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "compile:webview": "cd webview-ui && npm run build",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build": "npm-run-all compile:webview compile",
    "package": "npm-run-all compile:webview check-types lint package:ext",
    "package:ext": "node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}